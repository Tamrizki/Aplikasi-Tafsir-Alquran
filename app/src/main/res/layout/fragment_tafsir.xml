<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cl_black"
    tools:context=".ui.tafsir.TafsirFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cl_black">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/cl_black"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="exitUntilCollapsed|scroll">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="20dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="18sp"
                    android:background="@drawable/custom_background_yellow">
                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Al-Fatiha : 3"
                        style="@style/tx_bold_18"
                        android:textColor="@color/cl_black"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="15dp"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/tvArab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="TextArab"
                    android:textColor="@color/cl_white_less"
                    style="@style/tx_bold_18"
                    android:layout_margin="5dp"/>
                <TextView
                    android:id="@+id/tvTerjemah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="TextArab"
                    android:textColor="@color/cl_white_less"
                    style="@style/tx_reg_14"
                    android:layout_marginHorizontal="5dp"/>
            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="60dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tafsir Ayat"
                android:layout_marginTop="18dp"
                style="@style/tx_semi_bold_18"/>
            <View
                android:layout_width="50dp"
                android:layout_height="5dp"
                android:background="@color/cl_yellow"
                android:layout_marginBottom="18dp"/>
            <TextView
                android:id="@+id/tvTafsirShort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/tx_reg_14"/>
            <TextView
                android:id="@+id/tvTafsirLong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/tx_reg_14"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <ImageButton
        android:id="@+id/btnAudio"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_play_button"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="18dp"
        />
    <ProgressBar
        android:id="@+id/rolling"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:indeterminate="true"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>